{
  "name": "vs-piclist",
  "displayName": "%ext.displayName%",
  "description": "%ext.description%",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kuingsmile/vs-piclist.git"
  },
  "bugs": {
    "url": "https://github.com/Kuingsmile/vs-piclist/issues",
    "email": "pkukuing@gmail.com"
  },
  "type": "module",
  "keywords": [
    "image",
    "picture",
    "upload",
    "picgo",
    "image upload",
    "picture upload",
    "piclist"
  ],
  "icon": "logo.png",
  "version": "1.3.2",
  "publisher": "Kuingsmile",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "piclist.uploadFromClipboard",
        "title": "%command.upload.clipboard.title%",
        "category": "PicList"
      },
      {
        "command": "piclist.uploadFromExplorer",
        "title": "%command.upload.explorer.title%",
        "category": "PicList"
      },
      {
        "command": "piclist.uploadFromInputBox",
        "title": "%command.upload.inputBox.title%",
        "category": "PicList"
      },
      {
        "command": "piclist.deleteImage",
        "title": "%command.delete.title%",
        "category": "PicList"
      },
      {
        "command": "piclist.openImageDB",
        "title": "%command.openImageDB.title%",
        "category": "PicList"
      },
      {
        "command": "piclist.uploadAllImgInFile",
        "title": "%command.uploadAllImgInFile.title%",
        "category": "PicList"
      },
      {
        "command": "piclist.uploadSelectedImg",
        "title": "%command.uploadSelectedImg.title%",
        "category": "PicList"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "piclist.deleteImage",
          "when": "editorTextFocus"
        },
        {
          "command": "piclist.uploadSelectedImg",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "piclist.uploadFromClipboard",
        "key": "ctrl+alt+U",
        "mac": "cmd+alt+U"
      },
      {
        "command": "piclist.uploadFromExplorer",
        "key": "ctrl+alt+E",
        "mac": "cmd+alt+E"
      },
      {
        "command": "piclist.uploadFromInputBox",
        "key": "ctrl+alt+O",
        "mac": "cmd+alt+O"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%config.title%",
      "properties": {
        "piclist.uploadAPIUrl": {
          "type": "string",
          "default": "http://127.0.0.1:36677/upload",
          "markdownDescription": "%config.uploadAPIUrl.description%"
        },
        "piclist.deleteAPIUrl": {
          "type": "string",
          "default": "http://127.0.0.1:36677/delete",
          "markdownDescription": "%config.deleteAPIUrl.description%"
        },
        "piclist.copyType": {
          "type": "string",
          "default": "markdown",
          "markdownDescription": "%config.copyType.description%",
          "enum": [
            "markdown",
            "html",
            "url",
            "ubb",
            "custom"
          ],
          "enumDescriptions": [
            "%config.copyType.markdown%",
            "%config.copyType.html%",
            "%config.copyType.url%",
            "%config.copyType.ubb%",
            "%config.copyType.custom%"
          ]
        },
        "piclist.customType": {
          "type": "string",
          "default": "![$fileName]($url)",
          "markdownDescription": "%config.customType.description%"
        },
        "piclist.encodeUrl": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.encodeUrl.description%"
        },
        "piclist.remoteServerMode": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.remoteServerMode.description%"
        },
        "piclist.enableDragUpload": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%config.enableDragUpload.description%"
        }
      }
    }
  },
  "extensionKind": [
    "ui"
  ],
  "scripts": {
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "cz": "git-cz",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "release": "bump-version",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "yarn run package",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "devDependencies": {
    "node-bump-version": "^2.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "24.6.0",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
     "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.8.2",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@eslint/js": "^9.36.0",
    "typescript-eslint": "^8.45.0"
  },
  "dependencies": {
    "@picgo/store": "2.1.0",
    "axios": "1.12.2",
    "dayjs": "^1.11.18",
    "form-data": "^4.0.4",
    "fs-extra": "^11.3.2",
    "raw-loader": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/node-bump-version/.cz-config.cjs"
    }
  },
  "commitlint": {
    "extends": [
      "./node_modules/node-bump-version/dist/commitlint-node/index.js"
    ]
  }
}
